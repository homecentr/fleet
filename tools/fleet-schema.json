{
    "$id": "https://example.com/person.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Fleet",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "defaultNamespace": {
            "type": "string"
        },
        "dependsOn": {
            "type": "array",
            "item": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "type": "string"
                    }
                },
                "required": [
                    "name"
                ]
            }
        },
        "helm": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "chart": {
                    "type": "string"
                },
                "repo": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "releaseName": {
                    "type": "string"
                },
                "values": {
                    "type": "object",
                    "additionalProperties": true
                }
            },
            "required": [
                "chart",
                "repo",
                "version",
                "releaseName"
            ]
        },
        "targetCustomizations": {
            
        }
    },
    "oneOf": [
        {
            "title": "helm",
            "required": [
                "helm"
            ]
        },
        {
            "title": "kustomize",
            "required": [
                "kustomize"
            ]
        },
        {
            "title": "raw",
            "required": []
        }
    ],
    "required": [
        "defaultNamespace"
    ]
}
